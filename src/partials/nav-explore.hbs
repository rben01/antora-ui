<div class="nav-panel-explore is-active" data-panel="explore">
  {{#if page.component}}
    <div class="context">
      <span class="title">Navigation</span>
      <span class="nav-explore-expander">
        <svg xmlns="http://www.w3.org/2000/svg" class="svg-icon" viewBox="0 0 1 1">
          <title>Discloure chevron</title>
          <use href="#icon-chevron"></use>
        </svg>
      </span>
    </div>
  {{/if}}
  <ul class="components">
    {{#each site.components}}
      <li
        class="component{{#if (eq this @root.page.component)}} is-current{{/if}}{{#if (eq ./url @root.page.url)}} is-current-page{{/if}}">
        {{#if (eq ./url @root.page.url)}}
          <span class="title">{{{./title}}}</span>
        {{else}}
          <a class="title" href="{{{relativize ./url}}}">{{{./title}}}</a>
        {{/if}}
        {{#if (eq this @root.page.component)}}
          {{> nav-tree navigation=@root.page.navigation}}
        {{/if}}
      </li>
    {{/each}}
  </ul>
</div>
